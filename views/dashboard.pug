extends base

block content 

    div(class="container")

        h2(class="mt-3") #{user_board.username}'s dashboard

        if current_user.id === user_board.id

            div(class="row"): div(class="col-6")

                    a(href="/new-item" class="btn btn-secondary mt-3") Create new item

                    

        div(class="row gy-3")
            
            each item in user_board.items

                div(class="col-3")
                    include _board